# Maintainer: Torr <torr@artixlinux.org>
pkgname=testdisk
pkgver=7.1
pkgrel=1
pkgdesc="powerful data recovery software"
arch=("x86_64")
url="https://www.cgsecurity.org/wiki/TestDisk"
license=("GLP2")
depends=(
	"ncurses"
	"e2fsprogs"
	"libewf"
	"libiconv"
	"libjpeg"
	"ntfsprogs"
)
makedepends=(
	"gcc"
	"make"
)
source=(
	"https://www.cgsecurity.org/$pkgname-$pkgver.tar.bz2"
)
sha256sums=(
	"1413c47569e48c5b22653b943d48136cb228abcbd6f03da109c4df63382190fe"
)

build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make 
}

check() {
	cd "$pkgname-$pkgver"
	make check
}

package() {
	cd "$pkgname-$pkgver"
	make install DESTDIR=$pkgdir
	install -Dm 644 COPYING -t $pkgdir/usr/share/licenses/$pkgname
}
