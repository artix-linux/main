package_lua-sec() {
  pkgdesc="$pkgdesc for Lua 5.4"
  depends+=('lua-socket')

  cd "luasec-$pkgver"
  luarocks install --lua-version=5.4 --tree="$pkgdir/usr/" --deps-mode=none --no-manifest 5.4/*.rock
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
