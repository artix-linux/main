_name=backends
pkgname=sane
pkgver=1.2.1
pkgrel=3
pkgdesc="Scanner Access Now Easy"
arch=(x86_64)
url="http://www.sane-project.org/"
license=(GPL2)
depends=(
  bash
  cairo
  gcc-libs
  glibc
  libpng
  libieee1284
  net-snmp
  v4l-utils
)
makedepends=(
  autoconf-archive
  avahi
  curl
  glib2
  libgphoto2
  libjpeg-turbo
  libtiff
  libusb
  libxml2
  poppler-glib
  python
  texlive-latexextra
)
provides=(libsane.so)
source=(
  https://gitlab.com/sane-project/$_name/-/archive/$pkgver/$_name-$pkgver.tar.gz
        "66-${pkgname}d.rules"
        "${pkgname}.sysusers"
        "sane.xinetd"
)
