# Maintainer: Torr <torr@artixlinux.org>
pkgname=pbzip2
pkgver=1.1.13
pkgrel=1
pkgdesc="parallel implementation of the bzip2 block-sorting file compressor"
arch=("x86_64")
url="http://compression.great-site.net/pbzip2"
## File: https://github.com/ruanhuabin/pbzip2/blob/master/ChangeLog
changelog="Changelog.txt"
license=("custom")
depends=(
	"bzip2"
	"gcc-libs"
)
makedepends=(
	"gcc"
	"make"
)
source=(
	"https://launchpad.net/$pkgname/1.1/$pkgver/+download/$pkgname-$pkgver.tar.gz"
)
sha256sums=(
	"8fd13eaaa266f7ee91f85c1ea97c86d9c9cc985969db9059cdebcb1e1b7bdbe6"
)

build() {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make install DESTDIR=$pkgdir
	install -Dm 644 COPYING -t $pkgdir/usr/share/licenses/$pkgname
}
